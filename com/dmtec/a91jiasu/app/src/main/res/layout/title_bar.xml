<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/toolbar_height">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:id="@+id/title_back"
        android:layout_weight="1">
        <LinearLayout android:layout_width="wrap_content"
            android:id="@+id/toolbar_back"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/toolbar_icon_width"
                android:layout_height="@dimen/toolbar_icon_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/toolbar_icon_margin"
                android:src="@drawable/back"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/back"
                android:textSize="@dimen/title_size"
                android:layout_marginLeft="@dimen/toolbar_text_margin"
                android:textColor="@color/primary_btn_pressed"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:gravity="center_horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/register"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:gravity="end"
        android:id="@+id/title_refresh"
        android:visibility="invisible"
        android:layout_weight="1">
        <ImageView
            android:layout_width="@dimen/toolbar_icon_width"
            android:layout_height="@dimen/toolbar_icon_height"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/toolbar_icon_margin_2"
            android:src="@drawable/refresh"/>

    </LinearLayout>
</LinearLayout>
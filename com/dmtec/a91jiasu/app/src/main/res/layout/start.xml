<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/start_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/logo_padding"
            android:paddingRight="@dimen/logo_padding"
            android:src="@drawable/logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/change_route_layout"
            android:gravity="center_vertical"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/sr"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="当前线路"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/route_name"
                android:text="国内线路"
                android:textColor="@color/hint"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/switch_route"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:textColor="@color/primary_btn_pressed"
                android:textSize="16sp"
                android:text="切换线路"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            android:background="@color/light_hint"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/expire"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/expire_field"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/expire_date"
                android:textColor="@color/hint"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/continue_buy_btn"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:textColor="@color/primary_btn_pressed"
                android:textSize="16sp"
                android:text="@string/continue_buy"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            android:background="@color/light_hint"/>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/start_share_layout"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/share2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/share_rec"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/hint"
                android:textSize="16sp"
                android:id="@+id/share_text"
                android:text="@string/share_rec_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:id="@+id/start_share"
                android:textColor="@color/primary_btn_pressed"
                android:textSize="16sp"
                android:text="@string/share"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:background="@color/light_hint"/>

        <LinearLayout
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:layout_height="0dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>


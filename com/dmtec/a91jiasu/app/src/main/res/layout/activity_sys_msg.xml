<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_hint"
    android:layout_height="match_parent"
    tools:context="com.dmtec.a91jiasu.views.activities.SysMsgActivity">

    <include android:id="@+id/toolbar" layout="@layout/title_bar"/>
    <TextView
        android:layout_marginTop="100dp"
        android:id="@+id/no_msg_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:text="@string/no_sys_msg"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        android:textColor="@color/hint"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>

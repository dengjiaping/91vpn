<resources>

    <style name="ApplicationTheme" parent="ApplicationTheme.Base">
    </style>

    <style name="AlertDialogTheme" parent="AlertDialogTheme.Base">
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/statusbar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RoundPrimaryBtnTheme">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/btn_margin</item>
        <item name="android:layout_marginRight">@dimen/btn_margin</item>
        <item name="android:layout_marginTop">@dimen/btn_gap</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="BigRoundPrimaryBtnTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="SmallBtnTheme">
        <item name="android:layout_height">@dimen/small_btn_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="RoundSecondaryBtnTheme">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/btn_margin</item>
        <item name="android:layout_marginRight">@dimen/btn_margin</item>
        <item name="android:layout_marginTop">@dimen/btn_gap</item>
        <item name="android:textColor">@color/primary_btn_normal</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="CenterHintTextViewTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:layout_marginTop">@dimen/btn_gap</item>
        <item name="android:textSize">@dimen/hint_size</item>
    </style>

    <style name="logo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/logo_padding</item>
        <item name="android:paddingRight">@dimen/logo_padding</item>
        <item name="android:layout_marginTop">@dimen/logo_margin_top</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <style name="EditTextIconTheme">
        <item name="android:layout_height">@dimen/edit_text_icon_height</item>
        <item name="android:layout_width">@dimen/edit_text_icon_width</item>
        <item name="android:layout_marginLeft">@dimen/edit_text_icon_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>